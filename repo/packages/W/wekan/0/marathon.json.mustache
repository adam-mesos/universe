{
  "id": "{{service.name}}",
  "cpus": {{wekan.cpus}},
  "mem": {{wekan.mem}},
  "instances": 1,
  "env": {
    "MONGO_URL": "{{storage.mongo_url}}"
  },
  "container": {
    "type": "DOCKER",
    "volumes": [{
      "containerPath": "var",
      {{^storage.persistence.enable}}
      "hostPath": "{{storage.host_volume}}/{{service.name}}",
      {{/storage.persistence.enable}}
      {{#storage.persistence.enable}}
      "persistent": {
        "size": {{storage.persistence.volume_size}}
      },
      {{/storage.persistence.enable}}
      "mode": "RW"
    }],
    "docker": {
      "image": "{{resource.assets.container.docker.wekan-docker}}",
      "forcePullImage": false,
      "network": "BRIDGE",
      "portMappings": [{
        "containerPort": 80,
          "hostPort": 0,
          {{#networking.external_access.enable}}
          "servicePort": {{networking.external_access.external_port}},
          {{/networking.external_access.enable}}
          "protocol": "tcp"
      }]
    }
  },
  "healthChecks": [{
    "protocol": "TCP",
    "gracePeriodSeconds": 300,
    "intervalSeconds": 60,
    "timeoutSeconds": 20,
    "maxConsecutiveFailures": 3,
    "portIndex": 0
  }],
  "labels": {
    "DCOS_PACKAGE_VERSION": "0.11.0-rc2-0.1",
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_PORT_INDEX": "0",
    {{#networking.external_access.enable}}
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_VHOST": "{{networking.external_access.virtual_host}}",
    {{/networking.external_access.enable}}
    "DCOS_PACKAGE_IS_FRAMEWORK": "false"
  }
}
