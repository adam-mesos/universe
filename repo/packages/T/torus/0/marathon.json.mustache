{
  "id": "{{service.name}}",
  "cpus": {{torus.cpus}},
  "mem": {{torus.mem}},
  "disk": {{storage.reserved_size}},
  "instances": {{torus.instances}},
  "env": {
    "ETCD_HOST": "{{etcd.location}}",
    "STORAGE_SIZE": "{{storage.size}}",
    "AUTO_JOIN": "{{etcd.auto_join}}",
    "DEBUG_INIT": "{{etcd.debug_init}}",
    "DROP_MOUNT_BIN": "{{etcd.drop_mount_bin}}",
    "LISTEN_HTTP_PORT": "{{networking.http_port}}",
    "PEER_ADDRESS": "http://{{service.name}}.marathon.l4lb.thisdcos.directory:{{networking.port}}"
  },
  "container": {
    "type": "DOCKER",
    "volumes": [{
      "containerPath": "data",
      {{^storage.persistence.enable}}
      "hostPath": "{{storage.host_volume}}/{{service.name}}",
      {{/storage.persistence.enable}}
      {{#storage.persistence.enable}}
      "persistent": {
        "size": {{storage.reserved_size}}
      },
      {{/storage.persistence.enable}}
      "mode": "RW"
    }],
    "docker": {
      "image": "{{resource.assets.container.docker.torus-docker}}",
      "forcePullImage": false,
      "network": "HOST"
    }
  },
  "portDefinitions": [{
    "protocol": "tcp",
    "port": {{networking.port}},
    "labels": {"VIP_0": "/{{service.name}}:{{networking.port}}"},
    "name": "{{service.name}}"
  },
  {
    "protocol": "tcp",
    "port": {{networking.http_port}},
    "labels": {"VIP_1": "/{{service.name}}:{{networking.http_port}}"},
    {{#networking.external_access.enable}}
    "servicePort": {{networking.external_access.external_port}},
    {{/networking.external_access.enable}}
    "name": "{{service.name}}-http"
  }
  ],
  "requirePorts": true,
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "healthChecks": [
  {
    "protocol": "COMMAND",
    "command": {
      "value": "ps -Aef|grep torusd"
    },
    "gracePeriodSeconds": 300,
    "intervalSeconds": 10,
    "timeoutSeconds": 10,
    "maxConsecutiveFailures": 3,
    "portNumber": {{networking.port}}
  }
  ],
  "labels": {
    "DCOS_PACKAGE_VERSION": "0.1.2-0.1",
    "DCOS_SERVICE_NAME": "{{service.name}}",
    {{#networking.external_access.enable}}
    "HAPROXY_GROUP": "external",
    {{/networking.external_access.enable}}
    "DCOS_PACKAGE_IS_FRAMEWORK": "false"
  }
}
