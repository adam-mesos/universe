{
  "$schema": "http://json-schema.org/schema#",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS service configuration properties",
      "properties": {
        "name": {
          "description": "Name of this service instance",
          "type": "string",
          "default": "torus"
        }
      }
    },
    "torus": {
      "type": "object",
      "description": "torus service configuration properties",
      "properties": {
        "cpus": {
          "description": "CPU shares to allocate to each torus node.",
          "type": "number",
          "default": 0.5,
          "minimum": 0.5
        },
        "mem": {
          "description": "Memory to allocate to each torus node.",
          "type": "number",
          "default": 256.0,
          "minimum": 256.0
        }
      },
      "required": [
        "cpus",
        "mem"
      ]
    },
    "etcd": {
      "type": "object",
      "description": "torus etcd configuration properties",
      "properties":{
        "location": {
          "description": "Location of the etcd service to be used.",
          "type": "string",
          "default": "etcd.mesos"
        },
        "auto_join": {
          "description": "Auto join the service.",
          "type": "number",
          "default": 1
        },
        "drop_mount_bin": {
          "description": "Drop mount bin.",
          "type": "number",
          "default": 0
        },
        "debug_init": {
          "description": "Debug init.",
          "type": "number",
          "default": 1
        }
      }
    },
    "storage": {
      "type": "object",
      "description": "torus storage configuration properties",
      "properties":{    
        "size": {
          "description": "Size of the storage provided by this node.",
          "type": "string",
          "default": "1GiB"
        },
        "host_volume": {
          "description": "The location of a volume on the host to be used for torus data. The final location will be derived from this value plus the name set in `name` (e.g. `/mnt/host_volume/torus`). This can be a mounted NFS drive. Note that this path must be the same on all DC/OS agents.",
          "type": "string",
          "default": "/tmp"
        },
        "reserved_size": {
            "description": "Size of the storage to be allocated in each node for Torus",
              "type": "number",
              "default": 1024
        },
        "persistence": {
          "type": "object",
          "description": "Enable persistent volume storage.",
          "properties": {    
            "enable": {
              "description": "Enable or disable persistent volume storage.",
              "type": "boolean",
              "default": false                    
            }
          }
        }
      }
    },
    "networking": {
      "type": "object",
      "description": "torus networking configuration properties",
      "properties": {    
        "port": {
          "description": "Port number to be used for internal communication.",
          "type": "number",
          "default": 4000
        },
        "http_port": {
          "description": "Port number to be used for http.",
          "type": "number",
          "default": 4321
        },       
        "external_access": {
          "type": "object",
          "description": "Enable access to the http interface from outside the cluster through Marathon-LB.\nNOTE: this connection is unencrypted.",
            "properties": {    
              "enable": {
                "description": "Enable or disable creating a VIP for external http access through a public node running Marathon-LB.",
                "type": "boolean",
                "default": false                    
              },
              "external_port": {
                "description": "For external access, port number to be used for clear communication in the external Marathon-LB load balancer",
                "type": "number",
                "default": 10021
              }
            }
        }
      }      
    }
  }
}