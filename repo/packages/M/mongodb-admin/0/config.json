{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "service":{
            "type":"object",
            "description": "DC/OS service configuration properties.",
            "properties":{
                "name" : {
                    "description":"Name of this service instance.",
                    "type":"string",
                    "default":"mongodb-admin"
                }
            }
        },
        "mongodb-admin":{
            "type": "object",
            "description": "mongodb-admin service configuration properties.",
            "properties": {
                "cpus": {
                    "description": "CPU shares to allocate to this mongodb-admin instance.",
                    "type": "number",
                    "default": 0.2,
                    "minimum": 0.2
                },
                "mem": {
                    "description": "Memory to allocate to this mongodb-admin instance.",
                    "type": "number",
                    "default": 256.0,
                    "minimum": 256.0
                }
            },
            "required": [
                "cpus",
                "mem"
            ]
        },
        "auth":{
            "type": "object",
            "description": "mongodb-admin credentials.",
            "properties": {
                "enable":{
                    "description": "enable mongo-admin authentication on login.",
                    "type": "boolean",
                    "default": false
                },
                "username":{
                    "description": "mongo-admin web username.",
                    "type": "string",
                    "default": "user"
                },
                "password":{
                    "description": "mongo-admin web password.",
                    "type": "string",
                    "default": "password"
                }
        },
        "networking":{
            "type": "object",
            "description": "mongodb admin networking configuration properties",
            "properties": {
                "external_access": {
                    "type": "object",
                    "description": "Enable access from outside the cluster through Marathon-LB.\nNOTE: this connection is unencrypted.",
                    "properties": {    
                        "enable": {
                            "description": "Enable or disable creating a VIP for external access through a public node running Marathon-LB.",
                            "type": "boolean",
                            "default": false                    
                        },
                        "external_port": {
                            "description": "For external access, port number to be used for clear communication in the external Marathon-LB load balancer",
                            "type": "number",
                            "default": 27018
                        },
                        "virtual_host": {
                            "description": "For external access, Virtual Host URL to be used in the external load balancer.",
                            "type": "string",
                            "default": "mongodb-admin.example.org"
                        }
                    }
                }  
            }
        }
    }
}
