{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "service":{
            "type":"object",
            "description": "DC/OS service configuration properties.",
            "properties":{
                "name" : {
                    "description":"Name of this service instance.",
                    "type":"string",
                    "default":"mongodb-admin"
                }
            }
        },
        "mongodb-admin":{
            "type": "object",
            "description": "mongodb-admin service configuration properties.",
            "properties": {
                "cpus": {
                    "description": "CPU shares to allocate to this mongodb-admin instance.",
                    "type": "number",
                    "default": 0.2,
                    "minimum": 0.2
                },
                "mem": {
                    "description": "Memory to allocate to this mongodb-admin instance.",
                    "type": "number",
                    "default": 256.0,
                    "minimum": 256.0
                },
                "defaultdb": {
                    "description": "Default database.",
                    "type": "string",
                    "default": "defaultdb"
                },
                "editor_theme": {
                    "description": "mongo-express editor color theme (http://codemirror.net/demo/theme.html).",
                    "type": "string",
                    "default": "default"
                }
            },
            "required": [
                "cpus",
                "mem"
            ]
        },
        "auth":{
            "type": "object",
            "description": "mongodb-admin credentials.",
            "properties": {
                "username":{
                    "description": "mongo-admin web username.",
                    "type": "string",
                    "default": "user"
                },
                "password":{
                    "description": "mongo-admin web password.",
                    "type": "string",
                    "default": "password"
                },
                "admin_username":{
                    "description": "MongoDB admin username.",
                    "type": "string",
                    "default": "admin"
                },
                "admin_password":{
                    "description": "MongoDB admin password.",
                    "type": "string",
                    "default": "password"
                },
                "admin_username":{
                    "description": "MongoDB admin password.",
                    "type": "string",
                    "default": "password"
                },
                "enable_admin":{
                    "description": "Enable admin access to all databases.",
                    "type": "string",
                    "default": "true"
                },
                "db_auth":{
                    "type": "object",
                    "description": "If `enable_admin` is FALSE, credentials to the database.",
                    "properties": {
                        "auth_database":{
                            "description": "Database name.",
                            "type": "string",
                            "default": "defaultdb"
                        },      
                        "auth_username":{
                            "description": "Database username.",
                            "type": "string",
                            "default": "admin"
                        },
                        "auth_password":{
                            "description": "Database name.",
                            "type": "string",
                            "default": "defaultdb"
                        }
                    }
                }
            }
        },
        "networking":{
            "type": "object",
            "description": "mongodb admin networking configuration properties",
            "properties": {
                "mongodb_location":{
                    "description": "The name of the DC/OS mongodb instance to connect to.",
                    "type": "string",
                    "default": "mongodb"
                },
                "mongodb_host_port":{
                    "description": "The port where the mongodb instance is listening on.",
                    "type": "number",
                    "default": 27017
                },
                "external_access": {
                    "type": "object",
                    "description": "Enable access from outside the cluster through Marathon-LB.\nNOTE: this connection is unencrypted.",
                    "properties": {    
                        "enable": {
                            "description": "Enable or disable creating a VIP for external access through a public node running Marathon-LB.",
                            "type": "boolean",
                            "default": false                    
                        },
                        "external_port": {
                            "description": "For external access, port number to be used for clear communication in the external Marathon-LB load balancer",
                            "type": "number",
                            "default": 27018
                        },
                        "virtual_host": {
                            "description": "For external access, Virtual Host URL to be used in the external load balancer.",
                            "type": "string",
                            "default": "mongodb-admin.example.org"
                        }
                    }
                },
                "request_size":{
                    "description": "Maximum payload size. CRUD operations above this size will fail in (https://www.npmjs.com/package/body-parser).",
                    "type": "string",
                    "default": "100kb"
                },
                "base_url":{
                    "description": "Set the baseUrl to ease mounting at a subdirectory. Remember to include a leading and trailing slash.",
                    "type": "string",
                    "default": "/"
                },
                "cookie_secret":{
                    "description": "String used by [cookie-parser middleware](https://www.npmjs.com/package/cookie-parser) to sign cookies.",
                    "type": "string",
                    "default": "cookiesecret"
                },                
                "session_secret":{
                    "description": "String used to sign the session ID cookie by [express-session middleware](https://www.npmjs.com/package/express-session).",
                    "type": "string",
                    "default": "sessionsecret"
                }  
            }
        }
    }
}
